{
  "manifest_version": 2,
  "name": "Liker Clap Extension",
  "description": "This extension will add a Matters Likr Clap Button",
  "version": "0.2",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.busy.org/*",
		"*://*.steem.buzz/*",
        "*://*.steemit.com/*",
        "*://*.steempeak.com/*",
		"*://hive.blog/*"
      ],
      "js": [
        "steem.js",
        "liker.js"
      ]
    }
  ],
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab", "storage"
  ]
}
